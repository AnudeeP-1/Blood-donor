<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"

    tools:context=".Phonesignup">

    <ImageView
        android:id="@+id/phonesignupimage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/spl"
        android:transitionName="logo_image" />

    <TextView
        android:id="@+id/phonesignuptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!!"
        android:textSize="40sp"
        android:fontFamily="@font/bungee"
        android:layout_marginTop="-10dp"
        android:textColor="@color/black"
        android:transitionName="logo_text"
        />

    <TextView
        android:id="@+id/phonesignupdesc"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your phone number to continue"
        android:textSize="20sp"
        android:fontFamily="@font/antic"
        android:textColor="@color/black"
        android:transitionName="logo_text"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phonesignupnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:hint="Enter the phone number"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:transitionName="username_trans" >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/phonesignupsendotp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Send OTP"
        android:background="#000"
        android:textColor="#fff"
        android:transitionName="login_signup_tran" />


</LinearLayout>