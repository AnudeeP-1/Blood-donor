            android:layout_marginTop="30dp"

            android:layout_height="200dp"
            android:src="@drawable/life_saver"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:paddingLeft="30dp"

            android:text="If you smoke and you want to donate blood, plan to refrain from smoking on the day of your appointment â€” both before your appointment and for three hours afterward.Smoking before your appointment can lead to an increase in blood pressure. This may disqualify you from donating. Smoking afterward may lead to dizziness."
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_marginTop="50dp"
            app:fontFamily="@font/antic"
            android:textAlignment="textStart"
            android:gravity="start" />
    </LinearLayout>




</ScrollView>